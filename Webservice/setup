mkdir opinion_service
cd opinion_service


npm init -y


npm install express body-parser cors
 

 run:::---node app.js

Invoke-WebRequest -Uri "http://localhost:3000/submit-opinion" `
  -Method POST `
  -ContentType "application/json" `
  -Body '{"product": "Smartphone", "opinion": "Great battery life!"}'

Invoke-WebRequest -Uri "http://localhost:3000/opinions"
